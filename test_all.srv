# --- 8. Nested functions ---
function square x
    return x * x

function hypotenuse a b
    return square a + square b

print "Hypotenuse squared:"
print hypotenuse 3 4

# --- 9. Recursion (with parens for disambiguation) ---
function factorial n
    if n <= 1
        return 1
    return n * factorial (n - 1)

print "Factorial 10:"
print factorial 10

function fib n
    if n <= 1
        return n
    return fib (n - 1) + fib (n - 2)

print "Fibonacci 10:"
print fib 10

