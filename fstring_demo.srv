# --- F-strings in functions ---
print ""
print "--- F-Strings in Functions ---"
function describe_person name age
    return f"{name} is {age} years old"

print describe_person "Charlie" 25

function format_calc a op b result
    return f"{a} {op} {b} = {result}"

print format_calc 10 "+" 5 15
print format_calc 8 "*" 7 56

