# Temperature conversion
function celsius_to_fahrenheit c
    f = c * 9 / 5 + 32
    return f"{c}C = {f}F"

print celsius_to_fahrenheit 0
print celsius_to_fahrenheit 100
print celsius_to_fahrenheit 37

# Greeting generator
function make_greeting time name
    if time == "morning"
        return f"Good morning, {name}! Rise and shine!"
    else if time == "evening"
        return f"Good evening, {name}! How was your day?"
    else
        return f"Hello, {name}!"

print make_greeting "morning" "Alice"
print make_greeting "evening" "Bob"
print make_greeting "afternoon" "Charlie"

